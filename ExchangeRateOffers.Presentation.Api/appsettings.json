{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/exchangerate-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "Firebase": {
    "ServiceAccountKeyPath": "firebase-service-account.json"
  },
  "ExternalApis": {
    "MOCK_API_1": {
      "ProviderName": "MOCK_API_1",
      "BaseUrl": "http://exchangerate-mock1:8080/api/mock1/get-rate",
      "TimeoutSeconds": 30
    },
    "MOCK_API_2": {
      "ProviderName": "MOCK_API_2",
      "BaseUrl": "http://exchangerate-mock2:8080/api/mock2/convert",
      "TimeoutSeconds": 30
    },
    "MOCK_API_3": {
      "ProviderName": "MOCK_API_3",
      "BaseUrl": "http://exchangerate-mock3:8080/api/mock3/convert",
      "TimeoutSeconds": 30
    }
  }
}